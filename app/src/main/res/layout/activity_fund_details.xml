<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.home.FundDetailsActivity">

  <ScrollView
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="8dp">

      <ImageView
        android:id="@+id/fundImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/fund_opportunities"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_baseline_image_24" />

      <TextView
        android:id="@+id/fundNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Fund Name" />

      <TextView
        android:id="@+id/fundAmountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Fund Amount" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:background="@color/black"
          android:orientation="vertical"
          android:paddingStart="1dp"
          android:paddingTop="1dp"
          android:paddingBottom="1dp">

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="8dp"
            android:text="@string/breed"
            android:textSize="16sp" />

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:padding="8dp"
            android:text="@string/gender"
            android:textSize="16sp" />

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:padding="8dp"
            android:text="@string/average_weight"
            android:textSize="16sp" />

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:padding="8dp"
            android:text="@string/sourced_from"
            android:textSize="16sp" />

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:padding="8dp"
            android:text="@string/location"
            android:textSize="16sp" />

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:padding="8dp"
            android:text="@string/growth_timeline"
            android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:background="@color/black"
          android:orientation="vertical"
          android:paddingStart="1dp"
          android:paddingTop="1dp"
          android:paddingEnd="1dp"
          android:paddingBottom="1dp">

          <TextView
            android:id="@+id/breedTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="8dp"
            android:textSize="16sp"
            tools:text="@string/breed" />

          <TextView
            android:id="@+id/genderTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:padding="8dp"
            android:textSize="16sp"
            tools:text="@string/gender" />

          <TextView
            android:id="@+id/weightTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:padding="8dp"
            android:textSize="16sp"
            tools:text="@string/average_weight" />

          <TextView
            android:id="@+id/sourceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:padding="8dp"
            android:textSize="16sp"
            tools:text="@string/sourced_from" />

          <TextView
            android:id="@+id/locationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:padding="8dp"
            android:textSize="16sp"
            tools:text="@string/location" />

          <TextView
            android:id="@+id/timelineTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:padding="8dp"
            android:textSize="16sp"
            tools:text="@string/growth_timeline" />
        </LinearLayout>
      </LinearLayout>

      <TextView
        android:id="@+id/fundDetailsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:justificationMode="inter_word"
        android:textSize="16sp"
        tools:text="Fund Details Fund Details Fund Details Fund Details Fund Details Fund Details
          Fund Details Fund Details Fund Details Fund Details Fund Details Fund Details Fund Details
           Fund Details Fund Details Fund Details Fund Details Fund Details Fund Details Fund
           Details Fund Details Fund Details Fund Details " />

      <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/unitLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="@string/select_unit"
        app:errorEnabled="true">

        <AutoCompleteTextView
          android:id="@+id/unitTextView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="20sp" />
      </com.google.android.material.textfield.TextInputLayout>

      <Button
        android:id="@+id/buyNowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="@string/buy_now" />
    </LinearLayout>
  </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
