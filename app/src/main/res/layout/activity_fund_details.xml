<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context=".ui.home.FundDetailsActivity">

  <ScrollView
      android:id="@+id/scrollView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:fillViewport="true"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <ImageView
          android:id="@+id/fundImageView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:adjustViewBounds="true"
          android:contentDescription="@string/fund_opportunities"
          android:scaleType="centerCrop"
          tools:src="@mipmap/ic_launcher" />

      <TextView
          android:id="@+id/fundNameTextView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:textSize="20sp"
          android:textStyle="bold"
          tools:text="Fund Name" />

      <TextView
          android:id="@+id/fundAmountTextView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:textSize="16sp"
          android:textStyle="bold"
          tools:text="Fund Amount" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:background="@color/black"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="1dp"
            android:paddingStart="1dp"
            android:paddingBottom="1dp"
            android:orientation="vertical">

          <TextView
              android:background="@color/white"
              android:textSize="16sp"
              android:padding="8dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/breed" />

          <TextView
              android:background="@color/white"
              android:textSize="16sp"
              android:padding="8dp"
              android:layout_marginTop="1dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/gender" />

          <TextView
              android:background="@color/white"
              android:textSize="16sp"
              android:padding="8dp"
              android:layout_marginTop="1dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/average_weight" />

          <TextView
              android:background="@color/white"
              android:textSize="16sp"
              android:padding="8dp"
              android:layout_marginTop="1dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/sourced_from" />

          <TextView
              android:background="@color/white"
              android:textSize="16sp"
              android:padding="8dp"
              android:layout_marginTop="1dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/location" />

          <TextView
              android:background="@color/white"
              android:textSize="16sp"
              android:padding="8dp"
              android:layout_marginTop="1dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/growth_timeline" />
        </LinearLayout>

        <LinearLayout
            android:background="@color/black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="1dp"
            android:paddingStart="1dp"
            android:paddingEnd="1dp"
            android:paddingBottom="1dp"
            android:orientation="vertical">

          <TextView
              android:id="@+id/breedTextView"
              android:background="@color/white"
              android:textSize="16sp"
              android:padding="8dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:text="@string/breed" />

          <TextView
              android:id="@+id/genderTextView"
              android:background="@color/white"
              android:textSize="16sp"
              android:padding="8dp"
              android:layout_marginTop="1dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:text="@string/gender" />

          <TextView
              android:id="@+id/weightTextView"
              android:background="@color/white"
              android:textSize="16sp"
              android:padding="8dp"
              android:layout_marginTop="1dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:text="@string/average_weight" />

          <TextView
              android:id="@+id/sourceTextView"
              android:background="@color/white"
              android:textSize="16sp"
              android:padding="8dp"
              android:layout_marginTop="1dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:text="@string/sourced_from" />

          <TextView
              android:id="@+id/locationTextView"
              android:background="@color/white"
              android:textSize="16sp"
              android:padding="8dp"
              android:layout_marginTop="1dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:text="@string/location" />

          <TextView
              android:id="@+id/timelineTextView"
              android:background="@color/white"
              android:textSize="16sp"
              android:padding="8dp"
              android:layout_marginTop="1dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:text="@string/growth_timeline" />
        </LinearLayout>
      </LinearLayout>

      <TextView
          android:id="@+id/fundDetailsTextView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:justificationMode="inter_word"
          android:textSize="16sp"
          tools:text="Fund Details Fund Details Fund Details Fund Details Fund Details Fund Details
          Fund Details Fund Details Fund Details Fund Details Fund Details Fund Details Fund Details
           Fund Details Fund Details Fund Details Fund Details Fund Details Fund Details Fund
           Details Fund Details Fund Details Fund Details " />

      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/unitLayout"
          style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:hint="@string/select_unit"
          app:errorEnabled="true">

        <AutoCompleteTextView
            android:id="@+id/unitTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp" />
      </com.google.android.material.textfield.TextInputLayout>

      <Button
          android:id="@+id/buyNowButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="8dp"
          android:layout_marginBottom="@dimen/activity_vertical_margin"
          android:onClick="buyNow"
          android:text="@string/buy_now" />
    </LinearLayout>
  </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>